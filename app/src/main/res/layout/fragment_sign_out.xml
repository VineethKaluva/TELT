<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.praha.telt.SignOutFragment">

    <!-- TODO: Update blank fragment layout -->
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Are you sure you want to sign-out?"
           android:id="@+id/tvTextDisp"
           android:layout_alignParentTop="true"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:layout_marginTop="50dp"
           android:layout_marginLeft="20dp"
           android:textStyle="bold|italic"
           android:textSize="@dimen/abc_text_size_medium_material" />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="YES"
           android:id="@+id/btnYes"
           android:textStyle="bold|italic"
           android:onClick="OnSignOutYes"
           android:layout_below="@+id/tvTextDisp"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="25dp" />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="NO"
           android:id="@+id/btnNo"
           android:textStyle="bold|italic"
           android:layout_below="@+id/btnYes"
           android:layout_alignLeft="@+id/btnYes"
           android:layout_alignStart="@+id/btnYes"
           android:onClick="OnSignOutNo" />


   </RelativeLayout>

</FrameLayout>
